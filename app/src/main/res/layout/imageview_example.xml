<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="兩種圓形Imageview"
            android:layout_marginTop="20dp"/>

        <com.example.user.farm.widget.YuanJiaoImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/test3"/>

        <com.example.user.farm.widget.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/test7"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正方形Imageview"
            android:layout_marginTop="20dp"/>

        <com.example.user.farm.widget.SqureImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/test4"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>

        <com.example.user.farm.widget.RatioImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:height_to_width_ratio="0.75"
            android:scaleType="centerCrop"
            android:layout_marginTop="20dp"
            android:background="@mipmap/test2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="以下是自適應高度ImageView展示原圖"
            android:layout_marginTop="20dp"/>

        <com.example.user.farm.widget.AdaptiveImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/test3"
            android:layout_marginTop="20dp"/>

        <com.example.user.farm.widget.AdaptiveImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/test7"/>

        <com.example.user.farm.widget.AdaptiveImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/test4"/>

        <com.example.user.farm.widget.AdaptiveImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/test2"/>

    </LinearLayout>
</ScrollView>

