<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tw.edu.niu.farmfun.farmfun" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />   <!-- Internet permission -->
    <uses-feature android:name="android.hardware.camera" android:required="true"

        />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/farmfun_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Interface_Login"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Interface_MyStore" android:screenOrientation="portrait" android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name=".Interface_Register" android:screenOrientation="portrait" android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name=".Interface_Register2" android:screenOrientation="portrait" android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name=".Interface_Farm" android:screenOrientation="portrait" android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name=".Interface_Crop" android:screenOrientation="portrait"></activity>
        <activity android:name=".Interface_Crop_Info" android:screenOrientation="portrait" android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name=".Interface_Resume" android:screenOrientation="portrait"></activity>
        <activity android:name=".Interface_Resume_Info" android:screenOrientation="portrait" android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name=".Interface_Order" android:screenOrientation="portrait"></activity>
        <activity android:name=".Interface_Bank" android:screenOrientation="portrait" android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name=".Interface_Service" android:screenOrientation="portrait" android:windowSoftInputMode="adjustPan"></activity>
    </application>

</manifest>
