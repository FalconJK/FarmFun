<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <com.example.user.farm.widget.SqureImageView
            android:id="@+id/storedetail_photo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:elevation="16dp"
            android:scaleType="centerCrop"/>
        <!--店家資料-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:text="店家資料"
            />
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:elevation="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">
                <!--店家名稱-->
                <TextView
                    android:id="@+id/storedetail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="店家名稱　　： " />
                <!--產品種類-->
                <TextView
                    android:id="@+id/store_croptype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="產品種類　　： 橘子"
                    android:visibility="gone" />
                <!--營業電話-->
                <TextView
                    android:id="@+id/storedetail_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/cardview_default_radius"
                    android:text="營業電話　　： " />
                <!--種植農場-->
                <TextView
                    android:id="@+id/store_farm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/cardview_default_radius"
                    android:text="種植農場　　： 武陵農場"
                    android:visibility="gone" />
                <!--商片數量-->
                <TextView
                    android:id="@+id/storedetail_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/cardview_default_radius"
                    android:text="商品數量　　： " />
                <!--營業地址-->
                <TextView
                    android:id="@+id/storedetail_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/cardview_default_radius"
                    android:text="營業地址　　： " />
                <!--開始營業時間-->
                <TextView
                    android:id="@+id/storedetail_begintime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/cardview_default_radius"
                    android:text="開始營業時間： " />
                <!--結束營業時間-->
                <TextView
                    android:id="@+id/storedetail_endtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/cardview_default_radius"
                    android:text="結束營業時間： " />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>
