<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#F6E4CC"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1">

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spn_resume_farm"
            android:layout_weight="0.6" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/click_new_resume"
            android:src="@mipmap/icon_add"
            android:background="#00000000"
            android:layout_weight="0.2"
            android:scaleType="centerInside" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/click_delete_resume"
            android:src="@mipmap/icon_delete"
            android:background="#00000000"
            android:layout_weight="0.2"
            android:scaleType="centerInside" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/spn_resume_type"
                android:layout_weight="0.4" />

            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/spn_resume_crop"
                android:layout_weight="0.6" />
        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/resume_list_view"
            android:layout_gravity="center_horizontal"
            android:divider="#F6E4CC"
            android:dividerHeight="10px"
            android:listSelector="@drawable/border"
            android:layout_weight="0.85" />
    </LinearLayout>
</LinearLayout>
